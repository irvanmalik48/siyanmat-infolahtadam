// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id       String    @id @default(cuid())
  username String    @unique
  email    String    @unique
  password String
  name     String?
  image    String?   @default("/placeholder_portrait.png")
  role     String    @default("viewer")
  accounts Account[]
  sessions Session[]

  activities Activity[]

  logs Log[]

  @@unique([username, email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Activity {
  id            String   @id @default(cuid())
  activityCode  String   @unique
  name          String
  description   String?
  date          DateTime
  operator      User     @relation(fields: [operatorUname], references: [username], onDelete: Cascade)
  operatorUname String
  tool          Tool     @relation(fields: [toolCode], references: [toolCode], onDelete: Cascade)
  toolCode      String
  toolUsage     Int

  logs Log[]
}

model Tool {
  id           String  @id @default(cuid())
  toolCode     String  @unique
  name         String
  maxHourUsage Int
  image        String? @default("/placeholder_tool.png")
  isAvailable  Boolean @default(true)

  activities Activity[]

  logs Log[]
}

model Log {
  id           String   @id @default(cuid())
  activity     Activity @relation(fields: [activityCode], references: [activityCode], onDelete: Cascade)
  activityCode String
  tool         Tool     @relation(fields: [toolCode], references: [toolCode], onDelete: Cascade)
  toolCode     String
  user         User     @relation(fields: [username], references: [username], onDelete: Cascade)
  username     String
  date         DateTime
  usage        Int
}
